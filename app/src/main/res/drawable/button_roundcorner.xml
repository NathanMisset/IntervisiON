<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false">
        <shape>
            <stroke
                android:width="1dp"
                />
            <solid android:color="#ffffff" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!--When Button is in pressed state -->
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                />
            <solid android:color="#ffffff" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!--When Button is in selected state -->
    <item android:state_selected="true">
        <shape>
            <stroke
                android:width="1dp"
                />
            <solid android:color="#ffffff" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <!--Default Background Color -->
    <item android:background="@android:color/white">
        <shape>
            <stroke
                android:width="1dp"
                />
            <solid android:color="#ffffff" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>