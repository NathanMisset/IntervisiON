<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.IntervisiON"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:backgroundTint="@color/light_gray"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:cropToPadding="false"
        app:srcCompat="@drawable/image_main_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/background_black"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/username_login"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:accessibilityLiveRegion="polite"
        android:autofillHints="emailAddress"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/yellow_30"
        android:drawableLeft="@drawable/icon_mail"
        android:drawableTint="@color/background_black"

        android:drawablePadding="2dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:autofillHints="password"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/yellow_30"
        android:drawableTint="@color/background_black"
        android:drawableLeft="@drawable/icon_lock"
        android:drawablePadding="2dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/ic_launcher_background"
        android:text="@string/login_button"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cyan"
        android:textColorHint="@color/black"
        android:textColorLink="@color/cyan" />

    <TextView
        android:id="@+id/error_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FB0000"
        android:textColorHint="#FF0000" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_button_login"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/light_gray"
        android:singleLine="false"
        android:text="Registeren"
        android:textColor="@color/ic_launcher_background"
        android:textColorHighlight="#00FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgot_password_login"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/light_gray"
        android:text="@string/forgot_password"
        android:textColor="@color/ic_launcher_background"
        android:textSize="12sp" />


</LinearLayout>