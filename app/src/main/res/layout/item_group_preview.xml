<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_roundcorner"
        android:backgroundTint="@color/background_black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/header_group_card_group_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#00FFFFFF"
            android:text="@string/header_group_group_assembly"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/user_and_icon_1_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="#9A2424"
                android:maxWidth="72dp"
                android:maxHeight="90dp"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

            <TextView
                android:id="@+id/user_and_icon_2_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

            <TextView
                android:id="@+id/user_and_icon_3_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/user_and_icon_4_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

            <TextView
                android:id="@+id/user_and_icon_5_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

            <TextView
                android:id="@+id/user_and_icon_6_group_preview"
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/name_user_group_assembly"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                app:drawableTopCompat="@drawable/temp_profile_picture_72x72" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/join_group_group_preview"
            android:layout_width="298dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_roundcorner"
            android:backgroundTint="@color/ic_launcher_background"
            android:text="@string/join_button_group_assembly"
            android:textColor="@color/background_black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>