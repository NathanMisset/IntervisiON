<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_eleborate_choice"
        android:layout_width="331dp"
        android:layout_height="358dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.863">

        <TextView
            android:id="@+id/tv_thesis_item_thesis"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Tik de persoon die aan het woord mag."
            android:textColor="@color/black"
            android:background="@drawable/button_roundcorner"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/imageview_user_1_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />

            <ImageButton
                android:id="@+id/imageview_user_2_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />

            <ImageButton
                android:id="@+id/imageview_user_3_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/imageview_user_4_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />

            <ImageButton
                android:id="@+id/imageview_user_5_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />

            <ImageButton
                android:id="@+id/imageview_user_6_eleborate_choice"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/temp_profile_picture_72x72" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instructions_2_eleborate_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Of kies wellekeurig een deelnemer"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/random_button_eleborate_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_roundcorner"
                android:src="@android:drawable/btn_star" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>