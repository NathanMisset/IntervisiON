<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/greeting_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/background_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tutorial_button_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_round"
            android:padding="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:backgroundTint="@color/yellow_100"
            app:icon="@drawable/icon_questionmark"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="@color/black" />

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/background_black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/thesis_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="180dp" />

    <TextView
        android:id="@+id/hipotesis_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:background="@color/light_gray"
        android:text="@string/hipotesis_home"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

</LinearLayout>